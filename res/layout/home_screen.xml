<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <LinearLayout 
   
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >
    

<LinearLayout
   
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#D7E5F0"
        android:gravity="center"
        android:layout_margin="2dp"
         android:id="@+id/block_rassp"
        android:orientation="vertical">

        
        
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
       
        
       
         
        >
           <ListView 
                 android:id="@+id/list_dinamic"
                  android:layout_width="match_parent"
        android:layout_height="match_parent"
                 />
                 
             </LinearLayout>
             <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
     
        android:gravity="center"
      
         
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Расписание"
            android:textColor="#333333"
            android:textSize="28sp"
           
            android:typeface="normal" />
         <TextView
            android:id="@+id/nedelya_in_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Неделя по знаменателю"
            android:textColor="#333333"
            android:textSize="18sp"
            android:typeface="normal"
             />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
         android:id="@+id/block_news" 
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
 
        android:background="#99CCFF"
        android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
        >
             <LinearLayout
                android:id="@+id/image_block"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
   android:gravity="center" 
      
        >

             <ImageView
                 android:id="@+id/block_news_image"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="5dp"
                 android:src="@drawable/ic_dashboard_px" />
 
             </LinearLayout>
             <LinearLayout 
                   android:id="@+id/block_text_scroll" 
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

   android:orientation="vertical"
      
        >
             
                 <TextView
            android:id="@+id/block_news_head_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/20"
            android:layout_gravity="top|right"
            android:textColor="#FFF"
            android:paddingBottom="11dp"
            android:textSize="8sp"/>
                 
              <TextView
            android:id="@+id/block_news_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="заголовок"
            android:layout_gravity="center_vertical|center"
            android:textColor="#FFF"
            android:textSize="18sp"/>
            
              
            
         <TextView
             android:layout_marginTop="3dp"
            android:id="@+id/block_news_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новости"
         android:layout_gravity="center_vertical|center"
            
            android:textColor="#FFF"
            android:textSize="16sp"/>
            
           
         </LinearLayout>
     </LinearLayout>
      <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
   android:gravity="center"

        android:background="#99CCFF"
          android:layout_margin="2dp"
        >
          
      <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
  
      
        >
          

         <ImageView
              android:id="@+id/ava"
              android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="3dp"
           
             android:src="@drawable/ic_account_box_px" />
          </LinearLayout>
           <LinearLayout 
             android:id="@+id/profile"  
         android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_weight="1"
   
   android:orientation="vertical"
        >
          <TextView
            android:id="@+id/block_fak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fak"
            android:textColor="#FFF"
            android:textSize="18sp"
           
            android:typeface="normal" />
           <TextView
            android:id="@+id/block_kurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kurs"
            android:textColor="#FFF"
            android:textSize="18sp"
           
            android:typeface="normal" />
            <TextView
            android:id="@+id/block_gruppa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gruppa"
            android:textColor="#FFF"
            android:textSize="18sp"
           
            android:typeface="normal" />
         </LinearLayout>
          </LinearLayout>
    </LinearLayout>
</LinearLayout>
